---
import NavLink from '@components/ui/NavLink.astro';

const currentPath = Astro.url.pathname;
---

<aside class="flex h-full w-80 flex-col bg-gradient-to-b from-base-100 to-base-200/50 backdrop-blur-xl border-r border-base-300/50">
  <!-- Logo Section -->
  <div class="p-6">
    <div class="flex items-center gap-3 mb-6">
      <div class="relative group">
        <div class="absolute inset-0 bg-gradient-to-br from-primary to-secondary rounded-2xl blur opacity-75 group-hover:opacity-100 transition-opacity"></div>
        <div class="relative w-12 h-12 rounded-2xl bg-gradient-to-br from-primary to-secondary flex items-center justify-center shadow-lg">
          <svg class="w-7 h-7 text-primary-content" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
          </svg>
        </div>
      </div>
      <div>
        <h2 class="text-xl font-bold bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">SIA</h2>
        <p class="text-xs text-base-content/50 font-medium">Admin Portal</p>
      </div>
    </div>
    
    <!-- Quick Stats -->
    <div class="grid grid-cols-2 gap-3">
      <div class="bg-primary/10 rounded-xl p-3 backdrop-blur-sm border border-primary/20">
        <p class="text-2xl font-bold text-primary">1.2K</p>
        <p class="text-xs text-base-content/60">Students</p>
      </div>
      <div class="bg-secondary/10 rounded-xl p-3 backdrop-blur-sm border border-secondary/20">
        <p class="text-2xl font-bold text-secondary">87</p>
        <p class="text-xs text-base-content/60">Teachers</p>
      </div>
    </div>
  </div>
  
  <!-- Navigation -->
  <nav class="flex-1 overflow-y-auto px-4 pb-4 custom-scrollbar">
    <div class="space-y-6">
      <!-- Overview Section -->
      <div>
        <p class="text-xs font-semibold text-base-content/40 uppercase tracking-wider mb-3 px-3">Overview</p>
        <ul class="space-y-1">
          <li>
            <a href="/dashboard" class={`nav-link group ${currentPath === '/dashboard' ? 'active' : ''}`}>
              <div class="nav-link-icon">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                </svg>
              </div>
              <span>Dashboard</span>
              {currentPath === '/dashboard' && (
                <div class="ml-auto w-1.5 h-1.5 rounded-full bg-primary animate-pulse"></div>
              )}
            </a>
          </li>
          <li>
            <a href="/analytics" class={`nav-link group ${currentPath === '/analytics' ? 'active' : ''}`}>
              <div class="nav-link-icon">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                </svg>
              </div>
              <span>Analytics</span>
            </a>
          </li>
        </ul>
      </div>

      <!-- Administration Section -->
      <div>
        <p class="text-xs font-semibold text-base-content/40 uppercase tracking-wider mb-3 px-3">Administration</p>
        <ul class="space-y-1">
          <li>
            <a href="/admin/users" class={`nav-link group ${currentPath.startsWith('/admin/users') ? 'active' : ''}`}>
              <div class="nav-link-icon">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                </svg>
              </div>
              <span>Users</span>
              <span class="ml-auto badge badge-sm badge-primary">12</span>
            </a>
          </li>
          <li>
            <a href="/admin/classes" class={`nav-link group ${currentPath.startsWith('/admin/classes') ? 'active' : ''}`}>
              <div class="nav-link-icon">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
              </div>
              <span>Classes</span>
            </a>
          </li>
          <li>
            <a href="/admin/roles" class={`nav-link group ${currentPath.startsWith('/admin/roles') ? 'active' : ''}`}>
              <div class="nav-link-icon">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                </svg>
              </div>
              <span>Roles & Permissions</span>
            </a>
          </li>
        </ul>
      </div>

      <!-- Academic Section -->
      <div>
        <p class="text-xs font-semibold text-base-content/40 uppercase tracking-wider mb-3 px-3">Academic</p>
        <ul class="space-y-1">
          <li>
            <a href="/teacher/assignments" class={`nav-link group ${currentPath.startsWith('/teacher/assignments') ? 'active' : ''}`}>
              <div class="nav-link-icon">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
              </div>
              <span>Assignments</span>
              <span class="ml-auto badge badge-sm badge-warning">3</span>
            </a>
          </li>
          <li>
            <a href="/teacher/grades" class={`nav-link group ${currentPath.startsWith('/teacher/grades') ? 'active' : ''}`}>
              <div class="nav-link-icon">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                </svg>
              </div>
              <span>Grades</span>
            </a>
          </li>
          <li>
            <a href="/attendance" class={`nav-link group ${currentPath.startsWith('/attendance') ? 'active' : ''}`}>
              <div class="nav-link-icon">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
                </svg>
              </div>
              <span>Attendance</span>
            </a>
          </li>
        </ul>
      </div>

      <!-- Reports Section -->
      <div>
        <p class="text-xs font-semibold text-base-content/40 uppercase tracking-wider mb-3 px-3">Reports</p>
        <ul class="space-y-1">
          <li>
            <a href="/reports" class={`nav-link group ${currentPath === '/reports' ? 'active' : ''}`}>
              <div class="nav-link-icon">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
              </div>
              <span>Reports</span>
            </a>
          </li>
          <li>
            <a href="/settings" class={`nav-link group ${currentPath === '/settings' ? 'active' : ''}`}>
              <div class="nav-link-icon">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <span>Settings</span>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  
  <!-- Footer -->
  <div class="p-4 border-t border-base-300/50">
    <div class="bg-gradient-to-r from-primary/10 to-secondary/10 rounded-xl p-3 backdrop-blur-sm border border-primary/20">
      <p class="text-xs font-medium text-base-content/70">Need help?</p>
      <a href="/support" class="text-xs text-primary hover:text-secondary transition-colors font-semibold">Contact Support â†’</a>
    </div>
  </div>
</aside>

<style>
  .nav-link {
    @apply flex items-center gap-3 px-3 py-2.5 rounded-xl transition-all duration-200;
    @apply hover:bg-base-200 font-medium text-sm relative;
    color: oklch(var(--bc) / 0.7);
  }
  
  .nav-link:hover {
    color: oklch(var(--bc));
  }

  .nav-link.active {
    @apply text-primary border shadow-lg;
    background: linear-gradient(to right, oklch(var(--p) / 0.2), oklch(var(--s) / 0.2));
    border-color: oklch(var(--p) / 0.3);
  }

  .nav-link.active::before {
    content: '';
    @apply absolute left-0 top-1/2 -translate-y-1/2 w-1 h-8 rounded-r-full;
    background: linear-gradient(to bottom, var(--p), var(--s));
  }

  .nav-link-icon {
    @apply flex-shrink-0 w-8 h-8 rounded-lg flex items-center justify-center transition-colors;
    background: oklch(var(--b2) / 0.5);
  }
  
  .nav-link:hover .nav-link-icon {
    @apply bg-base-200;
  }

  .nav-link.active .nav-link-icon {
    @apply text-primary;
    background: linear-gradient(to bottom right, oklch(var(--p) / 0.2), oklch(var(--s) / 0.2));
  }

  .custom-scrollbar::-webkit-scrollbar {
    width: 6px;
  }

  .custom-scrollbar::-webkit-scrollbar-track {
    @apply bg-transparent;
  }

  .custom-scrollbar::-webkit-scrollbar-thumb {
    @apply rounded-full;
    background: oklch(var(--bc) / 0.1);
  }

  .custom-scrollbar::-webkit-scrollbar-thumb:hover {
    background: oklch(var(--bc) / 0.2);
  }
</style>
