---
import ThemeToggle from '@components/ui/ThemeToggle.svelte';
import NotificationDropdown from '@components/ui/NotificationDropdown.svelte';
import UserMenu from '@components/ui/UserMenu';
---

<header class="sticky top-0 z-30 bg-base-100/80 backdrop-blur-xl border-b border-base-300/50 shadow-lg">
  <div class="navbar px-4 lg:px-6">
    <div class="flex-1">
      <!-- Mobile menu button -->
      <label for="sidebar-drawer" class="btn btn-ghost btn-circle lg:hidden hover:bg-primary/10 transition-colors">
        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </label>
      
      <!-- Search Bar -->
      <div class="ml-4 flex-1 max-w-xl hidden md:block">
        <div class="relative group">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-base-content/40 group-focus-within:text-primary transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </div>
          <input
            type="search"
            class="input input-bordered w-full pl-10 pr-4 h-11 bg-base-200/50 border-base-300/50 focus:border-primary/50 focus:bg-base-100 transition-all"
            placeholder="Search students, classes, assignments..."
          />
          <kbd class="absolute inset-y-0 right-3 my-auto h-6 px-2 hidden lg:inline-flex items-center gap-1 rounded border border-base-300/50 bg-base-200/50 text-xs font-medium text-base-content/60">
            <span class="text-xs">âŒ˜</span>K
          </kbd>
        </div>
      </div>
    </div>
    
    <div class="flex-none">
      <div class="flex items-center gap-2">
        <!-- Quick Actions Dropdown -->
        <details class="dropdown dropdown-end hidden lg:block">
          <summary class="btn btn-ghost btn-circle hover:bg-primary/10 transition-colors" aria-label="Quick actions menu">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
          </summary>
          <ul class="dropdown-content menu p-3 shadow-2xl bg-base-100 rounded-2xl w-72 mt-3 border border-base-300/50 z-50">
            <li class="menu-title">
              <span class="text-xs font-semibold text-base-content/60">Quick Actions</span>
            </li>
            <li>
              <a href="/admin/users/create" class="gap-3 hover:bg-primary/10 rounded-xl">
                <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                </svg>
                <span>Add New User</span>
              </a>
            </li>
            <li>
              <a href="/admin/classes/create" class="gap-3 hover:bg-secondary/10 rounded-xl">
                <svg class="w-5 h-5 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                <span>Create Class</span>
              </a>
            </li>
            <li>
              <a href="/teacher/assignments/create" class="gap-3 hover:bg-accent/10 rounded-xl">
                <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <span>New Assignment</span>
              </a>
            </li>
          </ul>
        </details>

        <!-- Theme Toggle -->
        <div class="hidden sm:block">
          <ThemeToggle client:load />
        </div>
        
        <!-- Notifications -->
        <NotificationDropdown client:load />
        
        <!-- User Menu -->
        <UserMenu client:load />
      </div>
    </div>
  </div>
  
  <!-- Progress Bar (optional, for page loading) -->
  <div class="header-progress"></div>
</header>

<style>
  .header-progress {
    @apply h-0.5 bg-gradient-to-r from-primary via-secondary to-accent;
    @apply opacity-0 transition-opacity duration-300;
  }

  /* Show progress bar on page load */
  :global(html.loading) .header-progress {
    @apply opacity-100;
    animation: progress 1s ease-in-out infinite;
  }

  @keyframes progress {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(100%);
    }
  }
</style>
